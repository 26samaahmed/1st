---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";

type MarkdownEntry = {
  frontmatter: {
    name: string;
    githubUsername: string;
    message: string;
    extraLink: string;
  };
};

const contributors: MarkdownEntry[] = Object.values(
  import.meta.glob("../contributors/sp24/*.md", {
    eager: true,
  }),
);
---

<Layout title="Fall 2024 Contributors | 1st">
  <main>
    <h1>Fall 2024 Contributors</h1>
    <section class="contributors">
      {
        contributors.map((contributor) => (
          <div class="contributor">
            <Image
              src="/1st/acmIcon.png"
              alt="ACM at CSUF Icon"
              width={32}
              height={32}
            />
            <span>{contributor.frontmatter.name}</span>
          </div>
        ))
      }
    </section>
  </main>
</Layout>

<style>
  main {
    display: grid;
    align-items: center;
    justify-content: center;
  }

  h1 {
    text-align: center;
  }

  .contributors {
    display: grid;
    gap: 1rem;
    align-items: center;
    grid-template-columns: 1fr 1fr 1fr 1fr;
  }

  .contributor {
    cursor: pointer;
    display: flex;
    gap: 0.25rem;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    border: 2px solid rgb(var(--color-secondary));
    background-color: rgba(var(--color-secondary), 0.6);
    transition: background-color 150ms ease;
  }

  .contributor:hover {
    background-color: rgba(var(--color-secondary), 0.9);
  }
</style>
